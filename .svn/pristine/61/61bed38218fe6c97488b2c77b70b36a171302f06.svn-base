<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags always come first -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/login.css">
    <meta name="viewport" content="width=device-width, user-scalable=no">

    <!-- jQuery first, then Tether, then Bootstrap JS. -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
    <script src="js/lib/bootstrap.min.js"></script>

    <!-- JS Angular -->
    <script src="js/lib/angular.min.js"></script>
    <script src="js/lib/angular-route.min.js"></script>
    <script src="js/lib/angular-animate.min.js"></script>

    <!-- Login Controller -->
    <script src="js/controllers/LoginController.js"></script>

</head>

<body ng-app="loginApp" ng-controller="LoginController">
    <!-- Nav Bar -->
    <nav class="navbar navbar-light bg-faded navbar-fixed-top">
        <button class="navbar-toggler hidden-lg-up" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"></button>
        <div class="collapse navbar-toggleable-md" id="navbarResponsive">
            <a class="navbar-brand" href="index.html">
                <img src="assets/brand/scc.png" height="35" alt=""> Senior Companion Care</a>
            <ul class="nav navbar-nav float-xs-right">
                <li class="nav-item active">
                    <a class="nav-link" href="index.html">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="scc.html">SCC</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="search.html">Search</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="contact.html">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-danger" href="login.html">Log In</a>
                </li>
            </ul>
        </div>
    </nav>


    <!-- Login Content testing push to where-->
    <section id="slogan">
        <div class="col-sm-12">
            <div class="login">
                <div class="login-screen">
                    <div class="app-title">
                        <h1 class="display-4">Login</h1>
                    </div>
                    <div ng-show, ng-invalid>{{message}}</div>
                    <div class="login-form">
                        <!-- Email Text field -->
                        <div class="control-group">
                            <input type="text" class="login-field" value="" placeholder="email" id="login-email" ng-model="email" name="loginEmail" required>
                            <label class="login-field-icon fui-user" for="login-email"></label>
                        </div>

                        <!-- Password Text field-->
                        <div class="control-group">
                            <input type="password" class="login-field" value="" placeholder="password" id="login-pass" ng-model="password" name="password" required>
                            <label class="login-field-icon fui-lock" for="login-pass"></label>

                        </div>

                        <!-- Login Button -->
                        <a class="btn btn-success btn-large btn-block" ng-click="login()">Log In</a>

                        <!-- Create account link-->
                        <a class="login-link" href="signup.html">Create Account</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>
